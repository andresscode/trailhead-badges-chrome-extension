{
  "name": "Trailhead Badges",
  "short_name": "Counter",
  "version": "0.1",
  "description": "Count the number of hours you have completed at Trailhead.com",
  "permissions": ["activeTab", "declarativeContent"],
  "background": {
    "scripts": ["./js/background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "./html/popup.html"
  },
  "icons": {
    "16": "./image/icon16.png",
    "32": "./image/icon32.png",
    "48": "./image/icon48.png",
    "128": "./image/icon128.png"
  },
  "manifest_version": 2
}